<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

</head>
<body>
    <div  class="w-full h-full bg-zinc-900 p-10 text-white">
        <div class="nav mb-10">
            <a class="text-blue-500" href="/">home</a>
        </div>
        
        <h1 class="text-3xl tracking-tighter mb-3">All users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% users.forEach(function(user) { %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                <div class="w-full h-42  rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover " src='<%=user.image%>' >
                </div>
                <h3 class="text-xl mt-3 tracking-tighter"><%=user.name%></h3>
                <h5 class="text-zinc-500"><%=user.email%></h5>
                <div class="flex gap-3 mt-10">
                    <a class="text-zinc-200" href="">edit user</a>
                    <a class="text-red-500" href="">delete user</a>
                </div>
            </div>
            <% }) %>
        </div>
    </div>

    
</body>
</html>